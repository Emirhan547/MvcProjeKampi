@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yapı</th>
        <th>Yetkisini Değiştir</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>

            <td><a href="/AdminCategory/DeleteCategory/@item.ID" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/AdminCategory/EditAdmin/" @item.ID class="btn btn-warning">Yetkisini Değiştir</a></td>
            
        </tr>
    }
</table>
<br />
<a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Tanımla</a>


